{
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"]
		},
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"isolatedModules": true,
		"jsx": "react",
		"lib": ["es6", "dom"],
		"moduleResolution": "node",
		"noEmit": true,
		"noImplicitReturns": true,
		"strict": true,
		"target": "esnext"
	},
	"exclude": ["node_modules"]
}
